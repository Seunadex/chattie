                    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'dropdown-item'%>
                </div>
              </li>

            <% else %>
            <li class="nav-item"> <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link'%></li>
